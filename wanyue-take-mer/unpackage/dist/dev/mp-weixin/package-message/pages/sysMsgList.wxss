
page{
	width: 100%;
	height: 100%;
	overflow: hidden;
	background-color: #F5F5F5;
}
.timeview{
	background-color: #DBDBDB;
	height: 22px;
	margin-top: 15px;
	display: flex;
	flex-direction: row;
	border-radius: 11px;
	color: white;
	align-items: center;
	justify-content: center;
	font-size: 11px;
	width: 50%;
	margin-left: 25%;
}
.title1{
	margin-top: 10px;
	margin-left:10px ;
	margin-right: 10px;
	color: #AAA;
	font-size: 12px;
	height: 25px;
	overflow: hidden;
	word-break: break-all;  /* break-all(允许在单词内换行。) */
	text-overflow: ellipsis;  /* 超出部分省略号 */
	display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
	-webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
	-webkit-line-clamp: 1; /** 显示的行数 **/
}
.titleView{
	background-color: white;
	height: 120px;
	margin-top: 10px;
	margin-left: 15px;
	margin-right: 15px;
	border-radius: 2px;
	display: flex;
	flex-direction: column;
}
.bottom{
	margin-top: 10px;
	height:40px ;
	border-top: 1px solid #e6e6e6;
	align-items: center;
	display: flex;
	flex-direction: row;
}
.title2{
	flex: 1;
	margin-right: 20px;
	margin-left: 10px;
	font-size: 13px;
	text-align: left;
	color: #6f6f6f;
}
.cell {
	width: 100%;
	height: 167px;
	display: flex;
	flex-direction: column;
}
.rightimg {
	margin-right: 15px;
	/* margin-top: 13px; */
	width: 20px;
	height: 20px;
}
.contentView {
	margin-top: 13px;
	margin-left: 10px;
	width: calc(100% - 80px);
	height: 140px;
	display: flex;
	flex-direction: column;
	background-color: red;
}
.redBage {
	margin-top: 5px;
	margin-right: 0;
	width: 6px;
	height: 6px;
	border-radius: 3px;
	background-color: #FF4C4C;
}

