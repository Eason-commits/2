}
.item_content {
	text-overflow: ellipsis;

	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;

	display: -moz-box;
	-moz-line-clamp: 3;

	overflow-wrap: break-word;
	word-break: break-all;
	white-space: normal;
	overflow: hidden;
}
.item_content_word {
	width: auto;
	height: 20px;
	border-radius: 2px;
	background-color: #FEF0E5;
