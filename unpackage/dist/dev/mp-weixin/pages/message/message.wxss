
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
	background-color: #fff;
}
.logintip {
	width: 120px;
	height: 40px;
	border-radius: 20px;
	background-color: #00C1DE;
	color: white;
	font-size: 16px;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	margin-top: 300px;
	margin-left: calc(50% - 60px);
}
.tab_sel {
	font-size: 16px;
	font-weight: bold;
	color: #00C1DE;
	position: relative;
	height: 40px;
	justify-content: center;
	width: 50%;
	text-align: center;
}
.tab_sel::after {
	content: "";
	position: absolute;
	bottom: 0;
	left: 0;
	height: 2px;
	width: 100%;
	background-color: #00C1DE;
}
.tab_nor {
	font-size: 16px;
	font-weight: bold;
	color: #6F6F6F;
	position: relative;
	height: 30px;
	width: 50%;
	text-align: center;
}

